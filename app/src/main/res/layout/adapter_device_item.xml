<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/card_spacing"
    android:paddingBottom="@dimen/card_spacing"
    android:id="@+id/adapter_accessing_item_ll"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/title_medium_l_spacing"
            android:layout_weight="1"
            android:text="设备ID："
            android:textColor="@color/text_view_01"
            android:gravity="center"
            android:textSize="@dimen/sub_big_text"/>

        <TextView
            android:id="@+id/adapter_device_id_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_medium_l_spacing"
            android:layout_weight="2"
            android:text="123456789"
            android:textColor="@color/text_view_01"
            android:gravity="center|left"
            android:textSize="@dimen/sub_medium_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/title_medium_spacing"
            android:layout_weight="1"
            android:text="软件版本号："
            android:textColor="@color/text_view_01"
            android:gravity="center"
            android:textSize="@dimen/sub_big_text"/>

        <TextView
            android:id="@+id/adapter_device_software_version_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_medium_spacing"
            android:layout_weight="2"
            android:text="点击获取"
            android:textColor="@color/text_view_01"
            android:gravity="center|left"
            android:textSize="@dimen/sub_medium_text"/>

    </LinearLayout>

</LinearLayout>
